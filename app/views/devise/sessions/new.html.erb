<html class="login-pf">

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div id="brand">
      <h1>LEAD MANAGEMENT SOFTWARE</h1>
      </div><!--/#brand-->
    </div><!--/.col-*-->
    <div class="col-sm-9 col-md-9 col-lg-9 login">


     <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <label for="inputUsername" class="col-sm-2 col-md-2 control-label">Username</label>
          <div class="col-sm-7 col-md-7">
          
           <%= f.text_field :email, class: "form-control", autofocus: true %>
          </div>
        </div>
<p><br></p>
        <div class="form-group">
          <label for="inputPassword" class="col-sm-2 col-md-2 control-label ">Password</label>
          <div class="col-sm-7 col-md-7">
            
              <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
          </div>
        </div>

<% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-xs-8 col-sm-offset-2 col-sm-6 col-md-offset-2 col-md-6">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </label>
            </div>
  <% end -%>
            <span class="help-block"> <%= render "devise/shared/links" %></span>
          </div>

          <div class="col-xs-4 col-sm-4 col-md-4 submit">
             <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
   <% end %>

    </div><!--/.col-*-->
   
  </div><!--/.row-->
</div><!--/.container-->



</div>



</html>

